# Career Path Explorer - Backend Environment Variables
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:yourpassword@localhost:5432/career_path_explorer

# ============================================
# Server Configuration
# ============================================
# Port for the backend server (default: 3000)
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# ============================================
# Frontend Configuration
# ============================================
# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:5173

# ============================================
# Security (for future use)
# ============================================
# JWT secret key (uncomment when implementing authentication)
# JWT_SECRET=your-secret-key-here

# Session secret (uncomment when implementing sessions)
# SESSION_SECRET=your-session-secret-here

# ============================================
# Logging (for future use)
# ============================================
# Log level (error, warn, info, debug)
# LOG_LEVEL=info
